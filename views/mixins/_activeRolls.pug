mixin activeRolls()

  each roll in activeRolls
    .rollsContainer
      .activeRoll
        .activeRoll__info
          h3= `${roll.filmBrand} ${roll.filmName} - ISO ${roll.iso}`
          b= `📷 ${roll.camera} 🎞️ ${roll.photos.length} images recorded`
          p= `📆 Started on ${moment(roll.date).format("MMM Do YY")}`
          p= `${roll.description}`
        .activeRoll__buttonArea
          a(href=`/${roll.slug}/addPhoto`)
            button.activeRoll__button--button Record New Photo 📸
          a(href=`/${roll.slug}/roll`)
            button.activeRoll__button--button View/Edit Roll 🔍
  else
    h2 You haven't started any rolls!
    p To begin, add a camera that you would like to use, then start a new roll.