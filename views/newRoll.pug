extends layout

block content
  h1= title
    form.form(action='/newRoll' method='POST')
      label(for='camera') Select the camera:
      select(name='camera')
        option(value='camera1') Camera 1
        option(value='camera2') Camera 2
        option(value='camera3') Camera 3
      label(for='iso') ISO
      input(type="text" name='iso' placeholder="enter ISO (ex: 100, 200, 400)")
      br
      label(for='date') Date Started
      input(type="date" name='date')
      br
      label(for='filmBrand') Film Manufacture/Brand
      input(type="text" name='filmBrand' placeholder="Kodak, Fujifilm, Ilford, etc.")
      label(for='filmName') Film Name
      input(type="text" name='filmName' placeholder="HP5, Portra, etc.")
      label(for='description') Description/Notes
      input(type="text" name='description' placeholder="other information")
      input(type='submit' value='Load a new roll!')