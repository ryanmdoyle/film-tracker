extends layout

block content
  h1= title
  .inner
    h2 Active Rolls
    each roll in activeRolls
      .rollsContainer
        .activeRoll
          .activeRoll__info
            h3= `${roll.filmBrand} ${roll.filmName} - ISO ${roll.iso}`
            b= `📷 ${roll.camera} 🎞️ [number of photos] images recorded`
            p= `📆 Started on ${moment(roll.date).format("MMM Do YY")}`
            p= `${roll.description}`
          .activeRoll__buttonArea
            button.activeRoll__button--button Record New Photo 📸
            button.activeRoll__button--button View/Edit Roll 🔍
      